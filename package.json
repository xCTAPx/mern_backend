{
  "name": "mern_backend",
  "version": "0.0.0-alpha.1",
  "description": "Backend part of full-stack js application.",
  "main": "dist/src/index.js",
  "scripts": {
    "test": "test",
    "dev": "nodemon src/index.ts",
    "start": "node .",
    "build": "tsc",
    "prestart": "npm run build",
    "server:watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint:fix": "eslint --cache --ext .ts . --fix",
    "lint": "eslint --cache --ext .ts .",
    "prebuild": "npm run lint",
    "prepare": "husky install"
  },
  "keywords": [
    "mern",
    "nodejs",
    "mongoDB",
    "expressjs"
  ],
  "author": "Vadim Mechiev <sudkurve@mail.ru>",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "lint-staged": "^11.0.0",
    "mongoose": "^5.13.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.29.0",
    "husky": "^4.3.8",
    "nodemon": "^2.0.7",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4"
  },
  "lint-staged": {
    "*.{js, ts}": [
      "prettier --write",
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc"
    }
  }
}
