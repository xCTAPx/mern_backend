{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
          "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ],
  "ts-node": {
    "files": true
  },
}